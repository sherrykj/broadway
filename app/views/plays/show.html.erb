<div class="row">
 <div class="col-md-4">

<%= image_tag @play.play_img.url(:play_show), class: "play-show" %>

 </div>

<div class="col-md-8">
  <div class="play-info">


  <div class="d-inline p-2 bg-primary text-white"><div class="p-3 mb-2 bg-primary text-white"><h2 class="play-title"><p class="text-center"><%= @play.title %></p></h2></div></div>

  <h3 class="play-director"><span><em>From: </em></span><%= @play.director %></h3>
  <h4 class="play-director"><%= @play.category.name %><h4>
    <h4 class="avg-rating"> Average Rating </h4>
    <div class="average-review-rating" data-score=  <%= @average_review %>>  </div>
    <span class="number-of-reviews">From: <%= @play.reviews.count %> Reviews </span>
  <p class="play-desc"><%= @play.description %></p>

  </div>

  </div>

</div>


</div>


</div>
<div class="row">
 <div class="col-md-12">
   <div class="reviews">
     <h1> Reviews </h1>
     <%= render @play.reviews %>
     <div>
       <%= link_to "Add Reviews", new_play_review_path(@play), class: "btn-custom" %>

     </div>

   </div>

 </div>
</div>
<div class="links btn-group">
  <% if user_signed_in? %>
   <% if @play.user_id == current_user.id %><button class="col-md 4">
     <button class="btn-custom2">
    <%= link_to "Back", root_path, class: "btn btn-custom2"%>
</button>
<button class="btn-custom2">
    <%= link_to "Edit", edit_play_path(@play), class: "btn btn-custom2" %></button>
    <button class="btn-custom2">
    <%= link_to "Delete", play_path(@play), method: :delete, data: { confirm: "are you sure" }, class: "btn btn-danger" %>
</button></button>
  <% end %>
  <% end %>
</div>
</div>
<script>
 $('.review-rating').raty({
   readOnly: true,
   score: function() {
     return $(this).attr('data-score');
   },
   path: '/assets/'




 });



</script>

<script>
 $('.average-review-rating').raty({
   readOnly: true,
   score: function() {
     return $(this).attr('data-score');
   },
   path: '/assets/'




 });



</script>
